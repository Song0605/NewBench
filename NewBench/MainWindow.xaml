<Window x:Class="NewBench.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewBench"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:MainVm}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Button1"
                    Command="{Binding ButtonCmd}"
                    Width="80"
                    Height="30"/>
            <TextBlock Text="{Binding DisplayText}" HorizontalAlignment="Center" FontSize="16"/>

        </StackPanel>
    </Grid>
</Window>
